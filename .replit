modules = ["dotnet-7.0", "web", "dotnet-8"]
run = "dotnet run"
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["dotnet-sdk_8"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Gas Pipeline Web App"

[[workflows.workflow]]
name = "Gas Pipeline Web App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ASPNETCORE_URLS=http://0.0.0.0:5000 dotnet run"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
run = ["sh", "-c", "dotnet run"]

[[ports]]
localPort = 5000
externalPort = 80
